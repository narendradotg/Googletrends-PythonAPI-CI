pipeline {
agent any

stages {
stage('Hello') {
steps {
echo 'Hello World' echo "${env.BUILD_NUMBER}"
}

}
stage('checkout'){
steps{ checkout([$class: 'GitSCM', branches: name: '*/master', doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: url: 'https://github.com/narendradotg/googletendsapi']) }
} stage ("Build image") { // build our docker image

steps {
script {
docker.withServer("unix:///var/run/docker.sock") {

myImg = docker.build("gtrends-ng:${env.BUILD_ID}")
}

}

}

} stage ("Launching container") {

steps {
script {
withDockerContainer(image: "gtrends-ng:${env.BUILD_ID}")
{
sh 'python --version' sh 'python trends.py'
}

}

}

}

}

}
